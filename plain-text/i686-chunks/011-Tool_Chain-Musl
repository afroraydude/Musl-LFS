# Tool Chain: Musl-1.1.19
# Build and install as mlfs

./configure \
  CROSS_COMPILE=${MLFS_TARGET}- \
  --prefix=/ \
  --target=${MLFS_TARGET} 
make && make DESTDIR=/tools install
#make sure symlink is valid: /tools/lib/ld-musl-i386.so.1 to /tools/lib/libc.so
rm -v /tools/lib/ld-musl-i386.so.1
ln -sv libc.so /tools/lib/ld-musl-i386.so.1
